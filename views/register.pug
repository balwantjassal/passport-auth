extends layout.pug
block content
  div   
    .row.mt-5
        .col-md-6.m-auto
            .card.card-body
                include ../partials/messages.pug
                
            h1.text-center.mb-3
                i.fas.fa-user-plus
                |  Register
            form(action='/user/register', method='POST')
                .form-group
                label(for='name') Name
                input#name.form-control(name='name', placeholder='Enter Name', value=name, type='name')
                .form-group
                label(for='email') Email
                input#email.form-control(name='email', placeholder='Enter Email', value=email, type='email')
                .form-group
                label(for='password') Password
                input#password.form-control(name='password', placeholder='Create Password', value=password, type='password')
                .form-group
                label(for='password2') Confirm Password
                input#password2.form-control(name='password2', placeholder='Confirm Password', value=password2, type='password')
                br
                button.btn.btn-primary.btn-block(type='submit') Register
            p.lead.mt-4
                | Have An Account? 
                a(href='/user/login') Login
